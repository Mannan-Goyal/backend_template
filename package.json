{
    "name": "backend-template",
    "version": "1.0.0",
    "description": "A stater template for writing backends with express and typescript.",
    "main": "index.js",
    "author": "Mannan Goyal",
    "license": "MIT",
    "scripts": {
        "start:dev": "nodemon src/index.ts",
        "build": "npx rimraf dist && npx tsc -p tsconfig.prod.json",
        "prestart": "yarn run build",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "type:check": "tsc --pretty --noEmit"
    },
    "dependencies": {
        "@types/mongoose": "^5.11.97",
        "axios": "^1.6.7",
        "cors": "^2.8.5",
        "dotenv-safe": "^9.0.0",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "mongoose": "^8.1.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/dotenv-safe": "^8.1.6",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.19",
        "@typescript-eslint/eslint-plugin": ">=6.21.0",
        "@typescript-eslint/parser": ">=6.21.0",
        "eslint": ">=8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.3",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": ">=5.0.0"
    }
}
